#!/usr/bin/env bash


xbanish &

xrdb -merge ~/.Xresources &

#numlockx &

restorebg & 

xsetroot -cursor_name left_ptr &
setxkbmap it

set_current_city 1 &

#map CapsLock to Escape key
setxkbmap -option caps:escape &

dunst &
#xcompmgr &
compton &

xautolock -time 10 -locker locker &

if [ "$WM" == "bspwm" ]; then
    $HOME/.config/polybar/launch.sh &
    sxhkd $HOME/.config/sxhkd/bspwm &
else
    sxhkd &
fi

blueman-applet &
nm-applet &
udiskie -t -n &

